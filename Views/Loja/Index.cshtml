@model List<AvaliacaoLP3.ViewModels.LojaViewModel>

@{
    ViewData["Title"] = "Lista de lojas";
}

<div class="text-center">
    <h1 class="display-4">Lojas</h1>
</div>

@if(Model.Count == 0)
{
    <p>Nenhuma loja cadastrada</p>
    <p><a class="asd" asp-area="" asp-controller="Loja" asp-action="Cadastramento"><strong>Clique Aqui</strong> para cadastrar uma loja</a></p>
}
else{
    <p>Número de lojas cadastradas: @Model.Count </p>
    <hr>

    @foreach(var loja in Model)
    {
        <div class="list">
            <h5>
                Nome da loja: @loja.Nome
            </h5>
            <p>Id: @loja.Id</p>
            <p>Email: @loja.Email</p>
            <p>Descrição: @loja.Descricao</p>
            <p>Tipo de estabelecimentos: @loja.LK</p>
            <p> @loja.Piso</p>
            <hr>
        </div>
    }
}

<style>
    body{
       color: white; 
    }
    .asd{
        color: white; 
    }
    
    .fot{
        margin-left: 10px;
    }

</style>
